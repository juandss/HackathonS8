Funcion triangulo_area(base,altura)
	Escribir "El area del triangulo es:" (base*altura)/2 " m2";
FinFuncion

Algoritmo Ejercicio04_area_triangulo
	Escribir "Algoritmo para el calculo del Area de un triangulo";
	Escribir "Ingresar Base (metros):";
	Leer triangulo_base;
	Escribir "Ingresar Altura (metros):";
	Leer triangulo_altura;
	triangulo_area(triangulo_base,triangulo_altura);
FinAlgoritmo
